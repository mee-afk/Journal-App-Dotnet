@page "/timeline"
@inject JournalService JournalService
@inject UserService UserService
@inject NavigationManager Navigation

<PageTitle>Timeline - My Journal</PageTitle>

<style>
    .timeline-header {
        background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
        color: white;
        padding: 2rem 0;
        margin-bottom: 2rem;
        border-radius: 0 0 20px 20px;
        box-shadow: 0 4px 6px rgba(0,0,0,0.1);
    }

    .timeline-container {
        position: relative;
        padding-left: 30px;
    }

        .timeline-container::before {
            content: '';
            position: absolute;
            left: 0;
            top: 0;
            bottom: 0;
            width: 3px;
            background: linear-gradient(to bottom, #667eea, #764ba2);
            border-radius: 3px;
        }

    .timeline-entry {
        position: relative;
        margin-left: 20px;
        border: none;
        border-radius: 15px;
        box-shadow: 0 2px 8px rgba(0,0,0,0.08);
        transition: all 0.3s ease;
        overflow: hidden;
    }

        .timeline-entry:hover {
            transform: translateY(-5px);
            box-shadow: 0 8px 20px rgba(0,0,0,0.15);
        }

        .timeline-entry::before {
            content: '';
            position: absolute;
            left: -32px;
            top: 25px;
            width: 14px;
            height: 14px;
            background: white;
            border: 3px solid #667eea;
            border-radius: 50%;
            z-index: 1;
        }

        .timeline-entry .card-body {
            padding: 1.5rem;
        }

    .entry-title {
        color: #2d3748;
        font-weight: 600;
        font-size: 1.25rem;
        margin-bottom: 0.5rem;
    }

    .entry-date {
        color: #718096;
        font-size: 0.95rem;
        font-weight: 500;
        margin-bottom: 1rem;
    }

    .mood-badge {
        font-size: 0.85rem;
        padding: 0.4rem 0.8rem;
        border-radius: 20px;
        font-weight: 500;
    }

    .category-badge {
        font-size: 0.8rem;
        padding: 0.35rem 0.7rem;
        border-radius: 15px;
        background-color: #e2e8f0 !important;
        color: #4a5568 !important;
    }

    .word-count {
        color: #a0aec0;
        font-size: 0.85rem;
        font-weight: 500;
    }

    .entry-preview {
        color: #4a5568;
        line-height: 1.6;
        margin: 1rem 0;
        font-size: 0.95rem;
    }

    .tag-badge {
        background-color: #f7fafc !important;
        color: #4a5568 !important;
        border: 1px solid #e2e8f0;
        padding: 0.3rem 0.6rem;
        border-radius: 12px;
        font-size: 0.8rem;
        font-weight: 500;
    }

    .view-btn {
        background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
        border: none;
        border-radius: 10px;
        padding: 0.5rem 1.2rem;
        font-weight: 500;
        transition: all 0.3s ease;
    }

        .view-btn:hover {
            background: linear-gradient(135deg, rgba(102, 126, 234, 0.9) 0%, rgba(118, 75, 162, 0.9) 100%);
            transform: translateX(5px);
            box-shadow: 0 4px 12px rgba(182, 126, 244, 0.4);
        }

    .empty-state {
        text-align: center;
        padding: 4rem 2rem;
        background: linear-gradient(135deg, #f6f8fb 0%, #e9ecef 100%);
        border-radius: 20px;
        margin: 2rem 0;
    }

        .empty-state h4 {
            color: #2d3748;
            font-weight: 600;
            margin-bottom: 1rem;
        }

        .empty-state p {
            color: #718096;
            font-size: 1.1rem;
        }

    .create-btn {
        background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
        border: none;
        border-radius: 10px;
        padding: 0.7rem 1.5rem;
        font-weight: 500;
        margin-top: 1rem;
    }

    .pagination {
        margin-top: 2rem;
    }

    .page-link {
        color: #667eea;
        border: 1px solid #e2e8f0;
        border-radius: 8px;
        margin: 0 3px;
        font-weight: 500;
        transition: all 0.3s ease;
    }

        .page-link:hover {
            background-color: #667eea;
            border-color: #667eea;
            color: white;
        }

    .page-item.active .page-link {
        background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
        border-color: #667eea;
    }

    .page-item.disabled .page-link {
        background-color: #f7fafc;
        color: #cbd5e0;
    }

    .spinner-border {
        color: #667eea;
        width: 3rem;
        height: 3rem;
    }

    .loading-container {
        padding: 4rem 0;
    }
</style>

<AuthGuard>
    <div class="timeline-header">
        <div class="container">
            <div class="d-flex justify-content-between align-items-center">
                <div>
                    <h2 class="mb-1">Timeline</h2>
                    <p class="mb-0 opacity-75">Your personal journal journey</p>
                </div>
                <div class="text-end">
                    <div class="badge bg-white bg-opacity-25 px-3 py-2">
                        <i class="bi bi-person-circle me-2"></i>@UserService.CurrentUser?.FullName
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="container pb-5">
        @if (isLoading)
        {
            <div class="loading-container text-center">
                <div class="spinner-border" role="status">
                    <span class="visually-hidden">Loading...</span>
                </div>
                <p class="mt-3 text-muted">Loading your entries...</p>
            </div>
        }
        else if (entries.Any())
        {
            <div class="timeline-container">
                @foreach (var entry in entries)
                {
                    <div class="timeline-entry card mb-4">
                        <div class="card-body">
                            <div class="d-flex justify-content-between align-items-start mb-3">
                                <div class="flex-grow-1">
                                    <h5 class="entry-title">@entry.Title</h5>
                                    <div class="entry-date">
                                        <i class="bi bi-calendar3 me-2"></i>@entry.EntryDate.ToString("dddd, MMMM dd, yyyy")
                                    </div>
                                    <div class="d-flex flex-wrap gap-2 align-items-center">
                                        <span class="badge mood-badge bg-@GetMoodBadgeClass(entry.MoodCategory)">
                                            <i class="bi bi-emoji-smile me-1"></i>@entry.PrimaryMood
                                        </span>
                                        @if (!string.IsNullOrEmpty(entry.Category))
                                        {
                                            <span class="badge category-badge">
                                                <i class="bi bi-folder me-1"></i>@entry.Category
                                            </span>
                                        }
                                    </div>
                                </div>
                                <div class="word-count">
                                    <i class="bi bi-pencil me-1"></i>@entry.WordCount words
                                </div>
                            </div>

                            <p class="entry-preview">@GetPreview(entry.Content)</p>

                            @if (!string.IsNullOrEmpty(entry.Tags))
                            {
                                <div class="d-flex flex-wrap gap-2 mt-3 mb-3">
                                    @foreach (var tag in entry.TagList)
                                    {
                                        <span class="badge tag-badge">
                                            <i class="bi bi-tag-fill me-1"></i>@tag
                                        </span>
                                    }
                                </div>
                            }

                            <button class="btn btn-primary view-btn mt-2" @onclick="() => ViewEntry(entry.Id)">
                                View Full Entry <i class="bi bi-arrow-right ms-2"></i>
                            </button>
                        </div>
                    </div>
                }
            </div>

            @if (totalCount > pageSize)
            {
                <div class="d-flex justify-content-center">
                    <nav aria-label="Timeline pagination">
                        <ul class="pagination">
                            <li class="page-item @(currentPage == 1 ? "disabled" : "")">
                                <button class="page-link" @onclick="PreviousPage" disabled="@(currentPage == 1)">
                                    <i class="bi bi-chevron-left me-1"></i>Previous
                                </button>
                            </li>

                            @for (int i = 1; i <= totalPages; i++)
                            {
                                var pageNum = i;
                                <li class="page-item @(currentPage == pageNum ? "active" : "")">
                                    <button class="page-link" @onclick="() => GoToPage(pageNum)">
                                        @pageNum
                                    </button>
                                </li>
                            }

                            <li class="page-item @(currentPage == totalPages ? "disabled" : "")">
                                <button class="page-link" @onclick="NextPage" disabled="@(currentPage == totalPages)">
                                    Next<i class="bi bi-chevron-right ms-1"></i>
                                </button>
                            </li>
                        </ul>
                    </nav>
                </div>
            }
        }
        else
        {
            <div class="empty-state">
                <div class="mb-4">
                    <i class="bi bi-journal-text" style="font-size: 4rem; color: #667eea;"></i>
                </div>
                <h4>No entries yet!</h4>
                <p>Start your journaling journey today and capture your thoughts.</p>
                <button class="btn btn-primary create-btn" @onclick="GoToJournal">
                    <i class="bi bi-plus-circle me-2"></i>Create Your First Entry
                </button>
            </div>
        }
    </div>
</AuthGuard>

@code {
    private List<JournalEntry> entries = new();
    private bool isLoading = true;
    private int currentPage = 1;
    private int pageSize = 10;
    private int totalCount = 0;
    private int totalPages => (int)Math.Ceiling(totalCount / (double)pageSize);

    protected override async Task OnInitializedAsync()
    {
        await LoadEntries();
    }

    private async Task LoadEntries()
    {
        if (!UserService.IsLoggedIn)
        {
            return;
        }

        try
        {
            isLoading = true;
            var result = await JournalService.GetPaginatedEntriesAsync(currentPage, pageSize);
            entries = result.Entries;
            totalCount = result.TotalCount;
        }
        catch (Exception ex)
        {
            Console.WriteLine($"Error loading timeline: {ex.Message}");
        }
        finally
        {
            isLoading = false;
        }
    }

    private string GetPreview(string content)
    {
        // Strip HTML and get first 200 characters
        var text = System.Text.RegularExpressions.Regex.Replace(content, "<.*?>", string.Empty);
        text = System.Net.WebUtility.HtmlDecode(text);
        return text.Length > 200 ? text.Substring(0, 200) + "..." : text;
    }

    private string GetMoodBadgeClass(string moodCategory)
    {
        return moodCategory switch
        {
            "Positive" => "success",
            "Negative" => "danger",
            _ => "secondary"
        };
    }

    private void ViewEntry(int id)
    {
        Navigation.NavigateTo($"/journal/view/{id}");
    }


    private void GoToJournal()
    {
        Navigation.NavigateTo("/journal");
    }

    private async Task PreviousPage()
    {
        if (currentPage > 1)
        {
            currentPage--;
            await LoadEntries();
        }
    }

    private async Task NextPage()
    {
        if (currentPage < totalPages)
        {
            currentPage++;
            await LoadEntries();
        }
    }

    private async Task GoToPage(int page)
    {
        if (page != currentPage && page >= 1 && page <= totalPages)
        {
            currentPage = page;
            await LoadEntries();
        }
    }
}
