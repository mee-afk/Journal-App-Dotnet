@page "/pin-select"

@inject UserService UserService
@inject NavigationManager Navigation
@using JournalApp.Models
@layout EmptyLayout

<div class="auth-container">
    <div class="auth-card">
        <div class="auth-header">
            <h3>
                <span class="oi oi-people me-2"></span>
                Select Your Account
            </h3>
            <p class="text-muted">Multiple accounts found with this PIN</p>
        </div>

        <div class="user-selection-list">
            @if (Users != null && Users.Any())
            {
                @foreach (var user in Users)
                {
                    <div class="user-card" @onclick="() => SelectUser(user.Id)">
                        <div class="user-avatar">
                            <span class="oi oi-person"></span>
                        </div>

                        <div class="user-info">
                            <h5 class="mb-1">@user.FullName</h5>
                            <p class="text-muted mb-0">@@@user.Username</p>

                            @if (user.LastLoginAt.HasValue)
                            {
                                <small class="text-muted">
                                    Last login: @user.LastLoginAt.Value.ToString("MMM dd, yyyy")
                                </small>
                            }
                        </div>

                        <div class="user-arrow">
                            <span class="oi oi-chevron-right"></span>
                        </div>
                    </div>
                }
            }
            else
            {
                <div class="alert alert-warning">
                    <span class="oi oi-warning me-2"></span>
                    No users available
                </div>
            }
        </div>

        @if (!string.IsNullOrEmpty(errorMessage))
        {
            <div class="alert alert-danger mt-3">
                <span class="oi oi-warning me-2"></span>
                @errorMessage
            </div>
        }

        <div class="auth-footer mt-4">
            <button class="btn btn-outline-secondary w-100" @onclick="GoBack">
                <span class="oi oi-arrow-left me-2"></span>
                Back to Login
            </button>
        </div>
    </div>
</div>

@code {
    [Parameter]
    [SupplyParameterFromQuery]
    public string? UsersJson { get; set; }

    private List<User>? Users { get; set; }
    private string errorMessage = "";
    private bool isSelecting = false;

    protected override void OnInitialized()
    {
        // Parse users from query parameter
        if (!string.IsNullOrEmpty(UsersJson))
        {
            try
            {
                Users = System.Text.Json.JsonSerializer.Deserialize<List<User>>(
                    System.Text.Json.JsonSerializer.Deserialize<string>(UsersJson)!);
            }
            catch
            {
                errorMessage = "Failed to load users";
            }
        }

        // If no users provided, redirect back to login
        if (Users == null || !Users.Any())
        {
            Navigation.NavigateTo("/login");
        }
    }

    private async Task SelectUser(int userId)
    {
        if (isSelecting)
            return;

        try
        {
            isSelecting = true;
            errorMessage = "";

            var result = await UserService.SelectUserAfterPinAsync(userId);

            if (result.Success)
            {
                Navigation.NavigateTo("/");
            }
            else
            {
                errorMessage = result.Message;
            }
        }
        catch (Exception ex)
        {
            errorMessage = $"Login failed: {ex.Message}";
        }
        finally
        {
            isSelecting = false;
        }
    }

    private void GoBack()
    {
        Navigation.NavigateTo("/login");
    }
}

