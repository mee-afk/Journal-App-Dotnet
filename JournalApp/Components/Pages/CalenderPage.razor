@code {
    private DateTime CurrentMonth { get; set; }
    private DateTime? SelectedDate { get; set; }
    private List<DateTime> CalendarDays { get; set; } = new();
    private Dictionary<DateTime, JournalEntry> EntriesMap { get; set; } = new();
    private JournalEntry? SelectedEntry { get; set; }
    private HashSet<DateTime> StreakDates { get; set; } = new();

    // Statistics
    private int EntriesThisMonth { get; set; }
    private int CurrentStreak { get; set; }
    private string MostCommonMood { get; set; } = "N/A";

    protected override async Task OnInitializedAsync()
    {
        CurrentMonth = DateTime.Today;
        await LoadCalendarData();
    }

    private async Task LoadCalendarData()
    {
        GenerateCalendarDays();

        var startDate = new DateTime(CurrentMonth.Year, CurrentMonth.Month, 1);
        var endDate = startDate.AddMonths(1).AddDays(-1);

        var allEntries = await JournalService.GetAllEntriesAsync();
        var entries = allEntries.Where(e =>
            e.EntryDate.Date >= startDate.Date &&
            e.EntryDate.Date <= endDate.Date
        ).ToList();

        EntriesMap = entries.ToDictionary(e => e.EntryDate.Date, e => e);

        await CalculateStatistics();
        await LoadStreakData();
    }

    private void GenerateCalendarDays()
    {
        CalendarDays.Clear();

        var firstDay = new DateTime(CurrentMonth.Year, CurrentMonth.Month, 1);
        var lastDay = firstDay.AddMonths(1).AddDays(-1);

        var startDayOfWeek = (int)firstDay.DayOfWeek;
        var previousMonth = firstDay.AddMonths(-1);
        var daysInPreviousMonth = DateTime.DaysInMonth(previousMonth.Year, previousMonth.Month);

        for (int i = startDayOfWeek - 1; i >= 0; i--)
        {
            CalendarDays.Add(new DateTime(previousMonth.Year, previousMonth.Month, daysInPreviousMonth - i));
        }

        for (int day = 1; day <= lastDay.Day; day++)
        {
            CalendarDays.Add(new DateTime(CurrentMonth.Year, CurrentMonth.Month, day));
        }

        var remainingDays = 42 - CalendarDays.Count;
        var nextMonth = firstDay.AddMonths(1);
        for (int day = 1; day <= remainingDays; day++)
        {
            CalendarDays.Add(new DateTime(nextMonth.Year, nextMonth.Month, day));
        }
    }

    private async Task LoadStreakData()
    {
        var allEntries = await JournalService.GetAllEntriesAsync();
        var entryDates = allEntries.Select(e => e.EntryDate.Date).OrderBy(d => d).ToList();

        CurrentStreak = 0;
        var today = DateTime.Today;
        var checkDate = today;

        while (entryDates.Contains(checkDate) || (checkDate == today && entryDates.Contains(today)))
        {
            StreakDates.Add(checkDate);
            CurrentStreak++;
            checkDate = checkDate.AddDays(-1);
        }
    }

    private async Task CalculateStatistics()
    {
        EntriesThisMonth = EntriesMap.Count;

        if (EntriesMap.Any())
        {
            var moodGroups = EntriesMap.Values
                .GroupBy(e => e.PrimaryMood)
                .OrderByDescending(g => g.Count())
                .FirstOrDefault();

            MostCommonMood = moodGroups?.Key ?? "N/A";
        }
    }

    private string GetDayClasses(DateTime day)
    {
        var classes = new List<string>();

        if (day.Month != CurrentMonth.Month)
            classes.Add("other-month");

        if (day.Date == DateTime.Today)
            classes.Add("today");

        if (SelectedDate.HasValue && day.Date == SelectedDate.Value.Date)
            classes.Add("selected");

        if (HasEntry(day))
            classes.Add("has-entry");

        return string.Join(" ", classes);
    }

    private bool HasEntry(DateTime day) => EntriesMap.ContainsKey(day.Date);

    private bool HasStreak(DateTime day) => StreakDates.Contains(day.Date);

    private bool IsToday(DateTime date) => date.Date == DateTime.Today;

    private bool IsPastDate(DateTime date) => date.Date < DateTime.Today;

    private bool IsFutureDate(DateTime date) => date.Date > DateTime.Today;

    private string GetMoodColor(DateTime day)
    {
        if (!EntriesMap.TryGetValue(day.Date, out var entry))
            return "#ccc";

        var mood = entry.PrimaryMood;

        foreach (var category in MoodData.Categories)
        {
            if (category.Value.Contains(mood))
            {
                return category.Key switch
                {
                    "Positive" => "#4caf50",
                    "Neutral" => "#2196f3",
                    "Negative" => "#ff5722",
                    _ => "#9e9e9e"
                };
            }
        }

        return "#9e9e9e";
    }

    private string GetPreviewText(string content)
    {
        if (string.IsNullOrWhiteSpace(content))
            return "<em>No content</em>";

        var text = System.Text.RegularExpressions.Regex.Replace(content, "<.*?>", string.Empty);

        if (text.Length > 150)
            text = text.Substring(0, 150) + "...";

        return text;
    }

    private async Task SelectDate(DateTime date)
    {
        SelectedDate = date;
        SelectedEntry = EntriesMap.TryGetValue(date.Date, out var entry) ? entry : null;
    }

    private async Task PreviousMonth()
    {
        CurrentMonth = CurrentMonth.AddMonths(-1);
        SelectedDate = null;
        SelectedEntry = null;
        await LoadCalendarData();
    }

    private async Task NextMonth()
    {
        CurrentMonth = CurrentMonth.AddMonths(1);
        SelectedDate = null;
        SelectedEntry = null;
        await LoadCalendarData();
    }

    private void GoToToday()
    {
        CurrentMonth = DateTime.Today;
        SelectedDate = DateTime.Today;
        _ = LoadCalendarData();
    }

    private void GoToCurrentMonth()
    {
        CurrentMonth = DateTime.Today;
        SelectedDate = null;
        SelectedEntry = null;
        _ = LoadCalendarData();
    }

    private void ViewEntry()
    {
        if (SelectedEntry != null)
        {
            Navigation.NavigateTo($"/journal/view/{SelectedEntry.Id}");
        }
    }

    private void EditEntry()
    {
        if (SelectedDate.HasValue && IsToday(SelectedDate.Value))
        {
            Navigation.NavigateTo($"/journal?date={SelectedDate.Value:yyyy-MM-dd}&edit=true");
        }
    }

    private void CreateEntry()
    {
        if (SelectedDate.HasValue && IsToday(SelectedDate.Value))
        {
            Navigation.NavigateTo($"/journal");
        }
    }
}
