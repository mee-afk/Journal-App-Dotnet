@page "/calendar"
@inject JournalService JournalService
@inject NavigationManager Navigation

<div class="calendar-page container py-4">
    <!-- Header Section -->
    <div class="row mb-4">
        <div class="col">
            <div class="d-flex flex-column flex-md-row justify-content-between align-items-start align-items-md-center">
                <div>
                    <h1 class="display-6 fw-bold text-primary mb-2">
                        <i class="bi bi-calendar-date me-2"></i>
                        Calendar View
                    </h1>
                    <p class="text-muted mb-0">Navigate through your journal entries by date</p>
                </div>

                <!-- Month Stats in Header -->
                <div class="mt-3 mt-md-0">
                    <div class="d-flex gap-2">
                        <div class="badge bg-primary bg-opacity-10 text-primary px-3 py-2 rounded-pill">
                            <i class="bi bi-journal-text me-1"></i>
                            <strong>@EntriesThisMonth</strong> entries
                        </div>
                        <div class="badge bg-success bg-opacity-10 text-success px-3 py-2 rounded-pill">
                            <i class="bi bi-fire me-1"></i>
                            <strong>@CurrentStreak</strong> day streak
                        </div>
                        @if (!string.IsNullOrEmpty(MostCommonMood) && MostCommonMood != "N/A")
                        {
                            <div class="badge bg-info bg-opacity-10 text-info px-3 py-2 rounded-pill">
                                <i class="bi bi-emoji-smile me-1"></i>
                                @MostCommonMood
                            </div>
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Quick Navigation -->
    <div class="row mb-4">
        <div class="col">
            <div class="card border-light shadow-sm">
                <div class="card-body py-2">
                    <div class="d-flex flex-wrap gap-2 align-items-center">
                        <div class="d-flex align-items-center me-3">
                            <span class="me-2 small text-muted">Navigation:</span>
                            <button class="btn btn-sm btn-outline-primary" @onclick="GoToToday">
                                <i class="bi bi-calendar-day me-1"></i>
                                Today
                            </button>
                            <button class="btn btn-sm btn-outline-secondary ms-2" @onclick="GoToCurrentMonth">
                                <i class="bi bi-calendar-month me-1"></i>
                                This Month
                            </button>
                        </div>

                        <!-- Month Navigation -->
                        <div class="d-flex align-items-center ms-auto">
                            <button class="btn btn-sm btn-light border" @onclick="PreviousMonth">
                                <i class="bi bi-chevron-left"></i>
                            </button>
                            <span class="mx-3 fw-bold text-dark">@CurrentMonth.ToString("MMMM yyyy")</span>
                            <button class="btn btn-sm btn-light border" @onclick="NextMonth">
                                <i class="bi bi-chevron-right"></i>
                            </button>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Main Content - 2 Column Layout -->
    <div class="row">
        <!-- Calendar Column -->
        <div class="col-lg-8">
            <div class="card border-0 shadow-sm">
                <div class="card-body p-3 p-md-4">
                    <!-- Calendar Grid with CSS Grid -->
                    <div class="calendar-grid">
                        <!-- Day Headers -->
                        <div class="calendar-header-row">
                            @foreach (var day in new[] { "Sun", "Mon", "Tue", "Wed", "Thu", "Fri", "Sat" })
                            {
                                <div class="calendar-header-cell text-center fw-bold text-muted small py-2">@day</div>
                            }
                        </div>

                        <!-- Calendar Days -->
                        <div class="calendar-days-grid">
                            @for (int i = 0; i < CalendarDays.Count; i++)
                            {
                                var day = CalendarDays[i];
                                <div class="calendar-day-cell @GetDayClasses(day)" @onclick="() => SelectDate(day)">
                                    <div class="day-number d-flex justify-content-between align-items-start">
                                        <span class="@(day.Month != CurrentMonth.Month ? "text-muted" : "fw-bold")">
                                            @day.Day
                                        </span>
                                        @if (HasStreak(day))
                                        {
                                            <i class="bi bi-fire text-warning small"></i>
                                        }
                                    </div>

                                    @if (HasEntry(day))
                                    {
                                        <div class="entry-indicator mt-1 d-flex align-items-center justify-content-center">
                                            <span class="mood-dot me-1" style="background-color: @GetMoodColor(day)"></span>
                                            <small class="text-muted">
                                                @EntriesMap[day.Date].PrimaryMood.Substring(0, Math.Min(3, EntriesMap[day.Date].PrimaryMood.Length))
                                            </small>
                                        </div>
                                    }
                                </div>
                            }
                        </div>
                    </div>

                    <!-- Legend -->
                    <div class="mt-4 pt-3 border-top">
                        <div class="d-flex flex-wrap gap-3 align-items-center small">
                            <span class="text-muted">Legend:</span>
                            <div class="d-flex align-items-center">
                                <span class="mood-dot bg-success me-1"></span>
                                <span>Positive</span>
                            </div>
                            <div class="d-flex align-items-center">
                                <span class="mood-dot bg-info me-1"></span>
                                <span>Neutral</span>
                            </div>
                            <div class="d-flex align-items-center">
                                <span class="mood-dot bg-danger me-1"></span>
                                <span>Negative</span>
                            </div>
                            <div class="d-flex align-items-center">
                                <i class="bi bi-fire text-warning me-1"></i>
                                <span>Streak</span>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Selected Date Info Column -->
        <div class="col-lg-4 mt-4 mt-lg-0">
            @if (SelectedDate.HasValue)
            {
                <div class="card border-0 shadow-sm h-100">
                    <div class="card-header bg-primary text-white py-3">
                        <h5 class="mb-0">
                            <i class="bi bi-calendar-check me-2"></i>
                            @SelectedDate.Value.ToString("dddd, MMMM d, yyyy")
                        </h5>
                    </div>

                    <div class="card-body">
                        @if (SelectedEntry != null)
                        {
                            <div class="entry-preview">
                                <!-- Mood Badge -->
                                <div class="mb-3">
                                    <span class="badge fs-6 px-3 py-2 bg-@(SelectedEntry.MoodCategory?.ToLower() ?? "secondary") w-100 d-block">
                                        <i class="bi bi-emoji-@(SelectedEntry.MoodCategory == "Positive" ? "smile" : SelectedEntry.MoodCategory == "Negative" ? "frown" : "neutral") me-2"></i>
                                        @SelectedEntry.PrimaryMood
                                        @if (!string.IsNullOrEmpty(SelectedEntry.SecondaryMood1))
                                        {
                                            <span class="small"> + @SelectedEntry.SecondaryMood1</span>
                                        }
                                    </span>
                                </div>

                                <!-- Tags -->
                                @if (!string.IsNullOrEmpty(SelectedEntry.Tags))
                                {
                                    <div class="mb-3">
                                        <small class="text-muted d-block mb-1">
                                            <i class="bi bi-tags me-1"></i>
                                            Tags:
                                        </small>
                                        <div class="d-flex flex-wrap gap-1">
                                            @foreach (var tag in SelectedEntry.Tags.Split(','))
                                            {
                                                <span class="badge bg-light text-dark px-2 py-1 border">
                                                    @tag.Trim()
                                                </span>
                                            }
                                        </div>
                                    </div>
                                }

                                <!-- Content Preview -->
                                <div class="mb-4">
                                    <small class="text-muted d-block mb-1">Preview:</small>
                                    <div class="bg-light border rounded p-3">
                                        <p class="mb-0 text-dark small">
                                            @((MarkupString)GetPreviewText(SelectedEntry.Content))
                                        </p>
                                    </div>
                                </div>

                                <!-- Actions -->
                                <div class="d-grid gap-2">
                                    <button class="btn btn-primary btn-gradient" @onclick="ViewEntry">
                                        <i class="bi bi-eye me-2"></i>
                                        View Full Entry
                                    </button>

                                    @if (IsToday(SelectedDate.Value))
                                    {
                                        <button class="btn btn-outline-secondary" @onclick="EditEntry">
                                            <i class="bi bi-pencil me-2"></i>
                                            Edit Entry
                                        </button>
                                    }
                                    else
                                    {
                                        <div class="alert alert-warning mb-0 py-2 px-3 small">
                                            <i class="bi bi-lock me-1"></i>
                                            Past entries cannot be edited
                                        </div>
                                    }
                                </div>
                            </div>
                        }
                        else
                        {
                            <div class="text-center py-4">
                                <div class="mb-3">
                                    @if (IsPastDate(SelectedDate.Value))
                                    {
                                        <i class="bi bi-calendar-x text-warning" style="font-size: 3rem;"></i>
                                    }
                                    else if (IsFutureDate(SelectedDate.Value))
                                    {
                                        <i class="bi bi-calendar-event text-info" style="font-size: 3rem;"></i>
                                    }
                                    else
                                    {
                                        <i class="bi bi-journal-plus text-success" style="font-size: 3rem;"></i>
                                    }
                                </div>

                                @if (IsPastDate(SelectedDate.Value))
                                {
                                    <h5 class="text-warning mb-2">Missed Entry</h5>
                                    <p class="text-muted small mb-0">
                                        You didn't write an entry on this day.<br />
                                        Past dates cannot have new entries.
                                    </p>
                                }
                                else if (IsFutureDate(SelectedDate.Value))
                                {
                                    <h5 class="text-info mb-2">Future Date</h5>
                                    <p class="text-muted small mb-0">
                                        You cannot create entries for future dates.<br />
                                        Come back on this day to write!
                                    </p>
                                }
                                else
                                {
                                    <h5 class="text-muted mb-3">No entry for today</h5>
                                    <button class="btn btn-primary btn-gradient" @onclick="CreateEntry">
                                        <i class="bi bi-plus-circle me-2"></i>
                                        Create Today's Entry
                                    </button>
                                }
                            </div>
                        }
                    </div>
                </div>
            }
            else
            {
                <div class="card border-0 shadow-sm h-100">
                    <div class="card-body text-center d-flex flex-column justify-content-center py-5">
                        <div class="mb-3">
                            <i class="bi bi-calendar-x text-muted" style="font-size: 3rem;"></i>
                        </div>
                        <h5 class="text-muted">Select a date</h5>
                        <p class="text-muted small">Click on any date in the calendar to view details</p>
                    </div>
                </div>
            }
        </div>
    </div>
</div>

