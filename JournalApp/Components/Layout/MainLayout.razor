@inherits LayoutComponentBase
@implements IDisposable

@inject NavigationManager Navigation
@inject UserService UserService
@inject ThemeService ThemeService


<div class="page" data-theme="@currentTheme" style="height: 100vh; overflow: hidden;">
    <div class="sidebar">
        <NavMenu />
    </div>

    <main style="flex: 1; overflow-y: auto; height: 100%;">
        @* <div class="top-row px-4"> *@
        @*     <button class="theme-toggle" @onclick="ToggleTheme" title="Toggle Theme"> *@
        @*         <span class="oi @(isDarkTheme ? "oi-sun" : "oi-moon")"></span> *@
        @*     </button> *@
        @*     <button class="lock-icon" @onclick="ShowLockScreen" title="Lock App"> *@
        @*         <span class="oi oi-lock-locked"></span> *@
        @*     </button> *@
        @* </div> *@

        <article class="content px-4">
            @Body
        </article>
    </main>
</div>
<style>
    .page {
        display: flex;
        flex-direction: row;
        width: 100%;
        height: 100vh;
        overflow: hidden;
    }

    .sidebar {
        width: 250px;
        flex-shrink: 0;
        height: 100vh;
        overflow-y: auto;
    }

    main {
        flex: 1;
        height: 100vh;
        overflow-y: auto;
        display: flex;
        flex-direction: column;
    }

    .content {
        flex: 1;
        padding-top: 1rem;
    }
</style>
@code {
    private bool isDarkTheme = false;
    private string currentTheme = "light";

    protected override void OnInitialized()
    {
        ThemeService.ThemeChanged += OnThemeChanged;
        // Sync current theme immediately
        OnThemeChanged(this, ThemeService.CurrentTheme);
    }

    private async Task ToggleTheme()
    {
        // await ThemeService.ToggleThemeAsync();
        await ThemeService.ToggleThemeAsync(UserService.CurrentUser.Id);

    }

    private void OnThemeChanged(object? sender, string newTheme)
    {
        currentTheme = newTheme.ToLower();
        isDarkTheme = currentTheme == "dark";
        InvokeAsync(StateHasChanged); // safe update
    }

    private void ShowLockScreen()
    {
        Navigation.NavigateTo("/lock");
    }

    public void Dispose()
    {
        ThemeService.ThemeChanged -= OnThemeChanged;
    }
}